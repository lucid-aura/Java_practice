package assign8;

import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.File;
import java.io.FileReader;
import java.io.FileWriter;
import java.io.IOException;
import java.io.PrintWriter;
import java.util.Scanner;

public class MainClass {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);

		String stringIn[] = new String[3];
		System.out.println("문자열 3개를 입력하세요.");
		for (int i = 0; i < 3; i++) {
			System.out.println(i+1 + "번째 문자열 : ");
			stringIn[i] = sc.next();
		}
//		String stringIn1 = "안녕하세요";
//		String stringIn2 = "nice to meet you";
//		String stringIn3 = "건강하세요";
		
		File file1 = new File("c:\\myfile\\hello.txt");
		
		FileWriter fw;
		BufferedWriter bw;
		PrintWriter pw;
		// String data 3개 저장

		
		try {
			fw = new FileWriter(file1, true);
			bw= new BufferedWriter(fw);
			pw = new PrintWriter(bw);
			for (int i = 0; i < 3; i++) {
				pw.println(stringIn[i]);
			}
//			pw.println(stringIn1);
//			pw.println(stringIn2);
//			pw.println(stringIn3);
			pw.close();
			bw.close();
			fw.close();
		} catch (IOException e) {
			e.printStackTrace();
		} 
		
		String stringOut[] = new String[3];

		BufferedReader br;
		try {
			br = new BufferedReader(new FileReader(file1));
					
			String str;
			int i = 0;
			while((str = br.readLine()) != null) {
				stringOut[i] = str;
				i++;
			}
			br.close();
		}catch (Exception e){
			e.printStackTrace();
		}
		
		for (int i = 0; i < stringOut.length; i++) {
			System.out.println(stringOut[i]);
		}
		
		
		// String data 3개 불러오기 -> 배열 저장
		
		String human[] = {"홍길동", "24", "서울시" };
		File file2 = new File("c:\\myfile\\human.txt");

		try {
			fw = new FileWriter(file2, true);
			bw= new BufferedWriter(fw);
			pw = new PrintWriter(bw);
			pw.println(human[0] + "\n" + human[1] + "\n" +human[2]);
			pw.close();
			bw.close();
			fw.close();
		} catch (IOException e) {
			e.printStackTrace();
		} 

		BufferedReader br;
		try {
			br = new BufferedReader(new FileReader(file1));
					
			String str;
			int i = 0;
			while((str = br.readLine()) != null) {
				stringOut[i] = str;
				i++;
			}
			br.close();
		}catch (Exception e){
			e.printStackTrace();
		}
		
		for (int i = 0; i < stringOut.length; i++) {
			System.out.println(stringOut[i]);
		}
		// 위 String을 파일에 저장 -> println을 한번만 사용해서 저장
		
		// 파일에서 불러오기 -> 새로운 배열 [0] 이름, [1] 나이, [2] 주소
		
		// + 함수화

	}
}
