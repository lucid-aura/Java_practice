package assign8;

import java.io.BufferedWriter;
import java.io.File;
import java.io.FileWriter;
import java.io.IOException;
import java.io.PrintWriter;

public class MainClass {

	public static void main(String[] args) {
		// String data 3개 저장
		
		// String data 3개 불러오기 -> 배열 저장
		
		String human[] = {"홍길동", "24", "서울시" };
		File file = new File("c:\\myfile\\human.txt");
		FileWriter fw;
		BufferedWriter bw;
		PrintWriter pw;
		try {
			fw = new FileWriter(file, true);
			bw= new BufferedWriter(fw);
			pw = new PrintWriter(bw);
			pw.println(human[0] + "\n" + human[1] + "\n" +human[2]);
			pw.close();
			bw.close();
			fw.close();
		} catch (IOException e) {
			e.printStackTrace();
		} 

		
		pw.println("안녕하세요");
		pw.println("nice to meet you");
		pw.println("건강하세요");
		

		// 위 String을 파일에 저장 -> println을 한번만 사용해서 저장
		
		// 파일에서 불러오기 -> 새로운 배열 [0] 이름, [1] 나이, [2] 주소
		
		// + 함수화

	}
}
